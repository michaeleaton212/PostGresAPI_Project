using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using PostGresAPI.Models;
using PostGresAPI.Repository;
using PostGresAPI.Contracts;
using PostGresAPI.Extensions;

namespace PostGresAPI.Services
{
    public class UserService : IUserService
    {
        private readonly IUserRepository _repo;

        public UserService(IUserRepository repo) => _repo = repo;

        // Read
        public async Task<List<UserDto>> GetAll()
        {
            var users = await _repo.GetAll();
            return users.Select(u => u.ToDto()).ToList();
        }

        public async Task<UserDto?> GetById(int id)
        {
            var user = await _repo.GetById(id);
            return user is null ? null : user.ToDto(); // use extension mapping
        }

        // Create
        public async Task<UserDto> Create(CreateUserDto createUserDto)
        {
            var createdUser = await _repo.Add(createUserDto);
            return createdUser.ToDto();
        }

        // Update
        public async Task<UserDto?> Update(int id, string userName, string email, string? phone = null)
        {
            var updatedUser = await _repo.Update(id, userName, email, phone ?? "");
            if (updatedUser is null)
                return null;

            return updatedUser.ToDto();
        }

        // Delete
        public Task<bool> Delete(int id) => _repo.Delete(id);
    }
}
